fn collatz(n: i64) -> i64 {
    let steps: i64 = 0;
    let current: i64 = n;

    while current != 1 {
        if current % 2 == 0 {
            current = current / 2;
        } else {
            current = current * 3 + 1;
        }
        steps = steps + 1;
    }

    steps
}

pub fn main() -> i64 {
    collatz(27)
}
